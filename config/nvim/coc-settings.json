{
    "diagnostic-languageserver.enable": true,
    "diagnostic.enable": true,
    "codeLens.enable": false,
    "diagnostic.virtualText": false,
    "diagnostic.virtualTextLineSeparator": " \\ ",
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.messageTarget": "float",
    "diagnostic.enableMessage": "always",
    "diagnostic.refreshOnInsertMode": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.autoRefresh": true,
    "diagnostic.enableSign": true,
    "diagnostic.infoSign": "➜",
    "diagnostic.hintSign": "➜",
    "diagnostic.warningSign": "⚠",
    "diagnostic.errorSign": "✖",
    "diagnostic.format": "[%source%code] [%severity] %message",
    "diagnostic.floatConfig": {
        "border": true,
        "winblend": 0
    },
    "suggest.floatConfig": {
        "border": true,
        "winblend": 0
    },
    "coc.preferences.enableFloatHighlight": true,
    "suggest.floatEnable": true,
    "suggest.detailField": "preview",
    "suggest.enablePreview": true,
    "suggest.detailMaxLength": 100,
    "suggest.removeDuplicateItems": true,
    "signature.enable": true,
    "signature.target": "float",
    "signature.floatConfig": {
        "border": true,
        "winblend": 0
    },
    "hover.target": "float",
    "hover.autoHide": true,
    "hover.floatConfig": {
        "border": true,
        "winblend": 0
    },
    "signature.preferShownAbove": true,
    "signature.hideOnTextChange": true,
    // formatting when save
    "coc.preferences.formatOnSaveFiletypes": [
        "html",
        "erb",
        "css",
        "scss",
        "json",
        "yaml",
        "ruby",
        "rb",
        "markdown",
        "lua",
        "javascript",
        "python"
    ],
    // solargraph formatting and rubocop does linting
    "solargraph.hover": true,
    "solargraph.formatting": true,
    "solargraph.diagnostics": true,
    "solargraph.definitions": true,
    "solargraph.autoformat": true,
    "solargraph.completion": true,
    "solargraph.symbols": true,
    "solargraph.references": true,
    "solargraph.logLevel": "info",
    "solargraph.useBundler": false,
    "solargraph.rename": true,
    // highlight
    "highlight.document.enable": true,
    "highlight.colors.enable": true,
    "highlight.colorNames.enable": true,
    // json
    "json.enable": true,
    "json.format.enable": true,
    "json.trace.server": "messages",
    //css
    "css.enable": true,
    "css.validate": true,
    "css.colorDecorators.enable": true,
    "css.lint.duplicateProperties": "warning",
    //scss
    "scss.hover.references": true,
    "scss.hover.documentation": true,
    "scss.validate": true,
    "scss.colorDecorators.enable": true,
    "scss.lint.duplicateProperties": "warning",
    // yaml
    "yaml.enable": true,
    "yaml.hover": true,
    "yaml.completion": true,
    "yaml.format.enable": true,
    "yaml.format.singleQuote": false,
    "yaml.format.bracketSpacing": true,
    "yaml.trace.server": "verbose",
    // snippets
    "snippets.snipmate.enable": true,
    "snippets.ultisnips.enable": false,
    "suggest.snippetIndicator": "[+] ",
    "coc.preferences.snippetStatusText": "Ⓢ ",
    "suggest.completionItemKindLabels": {
        "method": "",
        "function": "",
        "variable": "",
        "field": "",
        "typeParameter": "",
        "constant": "",
        "class": "",
        "interface": "",
        "struct": "",
        "event": "",
        "operator": "",
        "module": "",
        "property": "",
        "enum": "",
        "reference": "",
        "keyword": "",
        "file": "",
        "folder": "",
        "color": "",
        "unit": "",
        "snippet": "",
        "text": "",
        "constructor": "",
        "value": "",
        "enumMember": ""
    },
}
